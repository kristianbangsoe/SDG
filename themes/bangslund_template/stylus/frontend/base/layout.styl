.container-fluid{
    
    @media (min-width: 576px){
        padding-right: 50px;
        padding-left: 50px;
    }
}

.divider {
    background: $green;
    height: 3px;
    width: 200px;
    margin: 25px 0;
}

.card{
    border-radius: 0;
    border:none;
    background: $gray;
    color: $dark;
    height: 100%;
    background-size: cover;
    aspect-ratio: 1 / 0.8;

    p{
        color: #6A6A6A;
        line-height: 25px;
    }
}

.card-white{
    background-color: white;
    color: $dark;
    height: 100%;
    p{
        color: #6A6A6A;
    }
}

.category-tag{
    background-color: $green;
    color: white!important;
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
    font-size: 0.8rem;
    text-transform: uppercase;
    font-weight: 500;
    display: inline-block;
    margin-bottom: 15px;
}


.card-dark{
    background-color: $dark;
    
    color: white;
    p{
        color: white;
    }
}

.card-green{
    background-color: $green;
    color: white;
    p{
        color: white;
    }
}

.title-section{
    color: $dark;
    p{
        line-height: 30px;
    }
}

// BG

.bg-green{
 background-color: $green;    
}

.bg-gray{
 background-color: $gray;
}

.bg-dark{
 background-color: $dark;
}

.bg-white{
 background-color: white;
}


.color-green{
 color: $green;    
}

.color-gray{
 color: $gray;
}

.color-dark{
 color: $dark;
}

.color-white{
 color: white;
}

.bg-shadow{
    box-shadow: 0 26px 47px rgba(0,0,0,0.05), 10px 24px 32px rgba(0,0,0,0.1);
}

.overlay{
    position: fixed;
    left 0
    right 0
    top 0
    bottom 0
    background: #00000061;
    z-index 3;
    display: none;
}

.bg-primary{
    background-color: $green;
}

.bg-sceondary{
    background-color: $dark;
}

.social-icon {
    background: #f26a2c;
    color: white;
    font-size: 24px;
    margin-right: 15px;
    display: inline-block;
    width: 50px;
    height: 50px;
    text-align: center;
    line-height: 56px;
}

.blur {
    backdrop-filter: blur(10px);
    transition: 0.5s;
    background-color: rgba(0, 0, 0, .30);
    &:hover{
        background-color: rgba(0, 0, 0, .10);
    }
}