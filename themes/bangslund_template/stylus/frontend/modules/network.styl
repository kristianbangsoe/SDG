#networks{
    table{
        width: 100%;
    }

    td, th,table{
        border: none;
    }
    th {
        padding-bottom: 10px;
    }

    select.form-control {
        border-radius: 0;
        height: 46px;
        box-shadow: 0 3px 10px #0000001c;
        border: 1px solid #f3f3f3;
        appearance: none;
        background: url('/wp-content/themes/dist/img/icons/arrow-down.svg') 
        background-repeat: no-repeat;
        background-position: calc(100% - 10px);
        background-size: 10px;
        min-width: 300px;   
    }
    
    .network-item, .network-filter{
        
        border: none;
        
        padding: 15px 0;
        border-top: 1px solid #efefef;
        align-items: center
        p{
            margin: 0;
            height 15px;
        }
        .network-name, .network-type, .network-sort, .network-categories{
            align-items: center;
            height: 60px;
        }

        .network-sort {
            cursor pointer
            i {
                margin-left: 10px;
            }
        }

        .network-categories{
            display: flex;
            justify-content: flex-end;
            i{
                cursor pointer
                &:hover{
                    
                }
            }
        }

        .network-modal{
            position: fixed;
            left: calc(50vw - 400px);
            top: 20vh;
            height: auto;
            z-index: 3;
            box-shadow: 0 0 30px #0000001c;
            background: white;
            width 800px;
            padding: 25px;
            .close-network {
                padding: 15px;
                right 0;
                position: absolute;
                top: 0;
            }
            p{
                margin-bottom: 15px;
                height: auto;
            }
            transition: 0.5s;
            transform: translateY(100vh);
            opacity: 0;
            .close-network{
                cursor pointer
            }
        }

        

    }
    .active .network-modal{
            transition: 0.5s;
            transform: translateY(0);
            opacity: 1;
        }
    .network-item:last-child{
        border-bottom: 1px solid #efefef;
    }

}