#create-account{
    input {
        padding: 25px 15px !important;
    }
}

.page-template-step-1 header, .page-template-step-2 header{
    display: none;
}

.sign-up {
    
    background: $dark;
    width: 100vw;
    top: 0;
    color: white;
    .step{
        display: none;
      
        align-items: center;
        justify-content: center;
     
    }
    .step.active{
        display: flex;
    }
    .company-type {
        padding: 10px 20px;
        margin-bottom: 20px;
        margin-right: 15px;
        background: #153E5A;
        color: white;
        border: 2px solid #ffffffc9;
        &:hover{
            border: 2px solid $green;
        }
    }
    .company-type.active{
        background: $green;
        border: 2px solid $green;
    }
    select{
        appearance: none;
        webkit-appearance: none;
    }

    #cover-signup{
        height 100vh;
        background-position: center;
        background-size: cover;
    }
    input[type="text"], input[type="email"], input[type="number"], input[type="search"]{
        background: none;
        border: none;
        width: 100%;
        transition: all .2s ease-out;
        font-size: 18px;
        border-bottom: 2px solid $green;
        color: white;
        padding: 15px;
        padding-left: 0;
        &:focus{
            background:#153E5A;
            outline: none;
            padding-left: 15px;
            border-bottom: 2px solid $green;
        }
        min-width: 500px;
    }

    #sdg-selection{
        grid-template-columns: repeat(8, 12%);
        column-gap: 0.5%;
        row-gap: 2%;
        display: grid;
        img{
            width 100%;
            transition: 0.4s;
            cursor pointer;
            &:hover{
                transform: scale(1.2) rotate(-3deg);   
                box-shadow: 0 10px 7px #00000039;
            }
        } 
        img.active, img.active:hover{
            transform: scale(1.2) rotate(0deg);   
            border: 4px solid white;
        } 

    }
}

